@page
@model RazorPages.Pages.AddProductModel
@{
	ViewData["Title"] = "Afegir Producte";
}
<div>
    <div class="text-center">
        <h1 class="display-4">Afegir nou producte</h1>
    </div>
    <form action="#" method="post">
        <div class="form-group">
            <label asp-for="NewProduct.Id"></label>
            <input class="form-control" asp-for="NewProduct.Id"/>
            <span asp-validation-for="NewProduct.Id"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewProduct.Name"></label>
            <input class="form-control" asp-for="NewProduct.Name" />
            <span asp-validation-for="NewProduct.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewProduct.Amount"></label>
            <input class="form-control" asp-for="NewProduct.Amount" />
            <span asp-validation-for="NewProduct.Amount"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewProduct.Price"></label>
            <input class="form-control" asp-for="NewProduct.Price" />
            <span asp-validation-for="NewProduct.Price"></span>
        </div>
        <button type="submit" class="btn btn-primary">Afegir</button>
    </form>
    <p>@Model.MsgFileError</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}